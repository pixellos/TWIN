        .up-row {
            top: 30%;
        }

        .middle-row {
            top: 45%;
        }

        .bottom-row {
            top: 60%;
        }

        .left-column {
            left: 0%;
            margin-left: 0px;
        }

        .middle-column {
            left: 50%;
        }

        .right-column {
            right: 0%;
