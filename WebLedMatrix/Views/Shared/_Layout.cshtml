            position: fixed;
            bottom: 2%;
            width: 50%;
            left: 50%;
            margin-left: -25%;
            height: 10%;
            border-color: black;
            border-width: 1px;
            border-style: solid;
        }
        #sendrq{
            bottom: 0%;
            left: 0%;
            background-color: lightblue;
        }
        #ifuseract{
            background-color: lightblue;
        }
        #ifuseract > #notactive{
            background-color: red;
        }
        #ifuseract > #active{
            background-color: green;
        }
        .active{
            display: block;
        }
        .inactive{
            display: none;
        }
    </style>
